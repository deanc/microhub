{
  "name": "microhub",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "dependencies": {
    "@tsconfig/node14": "^1.0.0",
    "autolinker": "^3.14.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^5.0.0",
    "csurf": "^1.11.0",
    "date-fns": "^2.16.1",
    "date-fns-timezone": "^0.1.4",
    "dompurify": "^2.2.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "feed": "^4.2.1",
    "helmet": "^4.2.0",
    "mysql2": "^2.2.5",
    "nodemon": "^2.0.6",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "redis": "^3.0.2",
    "slugify": "^1.4.6",
    "twig": "^1.15.3",
    "yup": "^0.31.0"
  },
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build; cp -r src/views dist/; cp -r src/public dist/; cp .env dist/;",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prod": "tsc; cp -r src/views dist/; cp -r src/public dist/",
    "scss": "./node_modules/.bin/node-sass --output-style compressed src/public/test.scss src/public/test.compiled.css; cp -r src/public dist/",
    "js": "./node_modules/.bin/uglifyjs src/public/app.js -o src/public/app.compiled.js -cm; cp -r src/public dist/"
  },
  "nodemonConfig": {
    "watch": "src",
    "ext": "ts,twig,scss",
    "exec": "npm run scss && npm run js && ts-node ./src/index.ts",
    "restart": "npm run scss && npm run js"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/connect-flash": "^0.0.36",
    "@types/csurf": "^1.11.0",
    "@types/dompurify": "^2.0.4",
    "@types/express": "^4.17.9",
    "@types/express-session": "^1.17.3",
    "@types/mysql2": "types/mysql2",
    "@types/node": "^14.14.9",
    "@types/passport": "^1.0.4",
    "@types/redis": "^2.8.28",
    "@types/twig": "^1.12.5",
    "@types/yup": "^0.29.9",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "uglify-es": "^3.3.9"
  }
}
