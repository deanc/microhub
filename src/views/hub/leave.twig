{% extends "shell.twig" %}

{% block body %}
<header class="secondary">
  <h1><a href="/">&#8962;</a> <em>/</em> {% if not hub.public %}&#128274;{% endif %} {{ hub.name }} <em>/</em> Leave Hub</h1>
</header>


<p>Are you sure you want to leave this hub?</p>
<form action="{{ url("hubLeave", {"hubId": hub.id, "slug": hub.slug}) }}" method="post">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
    <input type="submit" name="submit" value="Yes" /> <input type="submit" name="cancel" value="Cancel" />
</form>


<footer class="secondary">
  
</footer>
{% endblock %}